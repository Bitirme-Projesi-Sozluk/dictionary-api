                </a>
            </div>
        </div>
        <div class='main-Content' id="x">
            <div class='morgan-Freeman'>
                {{#each posts}}
                <a href="/posts/show/{{_id}}" class='keanu-Reeves morgan-Freeman'>
                    <h3 class='content-Header'>{{title}}</h3>
                    <span class='harrison-Ford'>{{category}}</span>
                    <p class='content-Summary'>{{about}}</p>
                </a>
                {{/each}}
                <script>
                    let s =document.querySelectorAll('.content-Summary').forEach((c)=>{c.innerHTML.length>384?c.innerHTML=c.innerHTML.substring(0,384).trim()+"...":c;});
                </script>
            </div>
            <style>
                .pagination {
                    display: flex;
                    justify-content: center;
                    margin: 10px 0;
                }

                .pagination a {
                    display: block;
                    color: var(--text-Colour);
                    text-decoration: none;
                    padding: 8px 10px;
                    border: 2px solid var(--control-Colour);
                    border-radius: 6px;
                    font-size: 14px;
                    color: var(--label-Colour);
                }

                .pagination a:not(:last-child) {
                    margin-right: 5px;
                }

                .pagination a.active {
                    background-color: var(--secondary-Colour);
                    color: var(--text-Colour);
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }
            </style>
            </head>
