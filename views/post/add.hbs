<div class='page-Content'>
    <div class='element-Container direction-Row'>

        <h1 class="py-3">Sayfa Ekle</h1>
        <div class="row">
            <div class="col-sm-12 mb-5">
                <form action="/posts" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Başlık</label>
                        <input class="form-control" id="title" type="text" name="title" placeholder=" Sayfanın Başlığı"
                            required>
                    </div>

            </div>
            <div class="form-group">
                <label for="title">Kategori</label>
                <input class="form-control" id="category" type="text" name="category" placeholder="Kategorinin İsmi"
                    required>
            </div>
            <div class="form-group">
                <label for="status">Statü</label>
                <select class="form-control" id="status" name="status">
                    <option value="published">yayında</option>
                    <option value="unpublished">yayında değil</option>
                </select>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" name="allowComments" type="checkbox" checked id="checkbox">
                <label class="form-check-label" for="checkbox">Yoruma İzin ver</label>
            </div>
            <div class="form-group">
                <label for="post-body">İçerik </label>
                <textarea class="input-group" id="post-body" name="body" rows="20"
                    placeholder="Sayfanın içerik yazısı"> </textarea>
            </div>
            <input class="form-control btn btn-dark" type="submit" value="Post">
            </form>
        </div>
    </div>

</div>
</div>